<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_4sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="@dimen/_10sdp"
            android:background="@color/white">
            <ImageView
                android:id="@+id/cart_image"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cart_product_name"
                    android:layout_width="@dimen/_175sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:background="@drawable/btn_style"
                    android:textStyle="bold"
                    android:textSize="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_6sdp"/>

                <TextView
                    android:id="@+id/cart_product_desc"
                    android:layout_width="@dimen/_175sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:textColor="@color/black"
                    android:background="@drawable/btn_style"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_margin="@dimen/_6sdp">

                    <TextView
                        android:id="@+id/product_cart_price_final"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Red"
                        android:textSize="@dimen/_20sdp"
                        android:textAlignment="viewStart"
                        android:background="@color/white"
                                               />

                    <ImageButton
                        android:id="@+id/cart_count_remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:src="@drawable/ic_remove"
                        android:background="@color/Red"/>

                    <TextView
                        android:id="@+id/cart_count"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Red"
                        android:textSize="@dimen/_16sdp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:background="@drawable/btn_style"
                        android:layout_marginLeft="@dimen/_8sdp"
                        />
                    <ImageButton
                        android:id="@+id/cart_count_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:src="@drawable/ic_add"
                        android:background="@color/Red"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

<LinearLayout
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:padding="@dimen/_3sdp">

    <Button
    android:id="@+id/Clear_Cart"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="@dimen/_35sdp"
        android:background="@drawable/btn_style"
        android:text="@string/Clear_Cart"
        android:textAllCaps="false"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/black"/>


    <Button
        android:id="@+id/Go_Checkout"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_42sdp"
        android:background="@drawable/corner_shape_btn"
        android:layout_marginLeft="@dimen/_9sdp"
        android:text="@string/Checkout"
        android:textAllCaps="false"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/white"/>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

